<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB.Shop.UI</title>

    <environment include="Development">
        <link href="~/lib/bulma-0.8.0/css/bulma.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
    </environment>

    <environment include="Production">
        <link href="~/lib/bulma-0.8.0/css/bulma.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
    </environment>
</head>

<body>
    <section class="hero is-fullheight">

        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="container">
                <div class="navbar-brand">
                    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
                <div class="navbar-menu">
                    <div class="navbar-start">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="navbar-item" asp-page="/Admin/Index">Admin</a>
                        }
                        <a class="navbar-item" asp-page="/Index">Tanie Żarcie</a>
                        <a class="navbar-item" asp-page="/MainProducts">Wszystkie Produkty</a>
                    </div>

                    <div class="navbar-end">
                        <vc:cart view="Small"></vc:cart>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="navbar-item" asp-controller="Account" asp-action="Logout">Sign Out</a>
                        }
                    </div>
                </div>
            </div>
        </nav>

        <div class="column">
            <partial name="_CookieConsentPartial" />
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </section>

    <footer class="footer">
        <div class="content has-text-centered">
            &copy; 2020 - TanieŻarcie - <a asp-area="" asp-page="/Privacy">Polityka Prywatności</a>
            <a asp-page="/Admin/Index">Admin Login</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment include="Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
