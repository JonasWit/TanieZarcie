@inject IAuthorizationService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tanie Zarcie !!!</title>
    <base href="/" />
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="icon" href="@Url.Content("~/content/browserIcons/udko.png")" />
    </environment>

    <environment include="Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="icon" href="@Url.Content("~/content/browserIcons/udko.png")" />
    </environment>
</head>

<body>
    <section>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">

            <a class="navbar-brand" asp-page="/Index">TANIE <span> <img style="height:20px;" src="~/content/browserIcons/udko.png" alt="Udeczko" /> </span> ŻARCIE</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Info" asp-action="WipPage">Top Promocje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MainProducts">Wszystkie Produkty</a>
                    </li>
                    @if ((await authService.AuthorizeAsync(User, "Manager")).Succeeded)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Summaries" asp-action="Index">Zestawienia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="News" asp-action="NewsOverview">Aktualności</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Manager" asp-action="Edit">Add News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Manager" asp-action="Index">News Management Panel</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <span class="glyphicon glyphicon-log-in">
                                </span>Logout
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Index">Admin</a>
                        </li>
                    }
                </ul>
                <ul class="nav nav-pills nav navbar-nav navbar-right">
                    <li class="nav-item">
                        @*<vc:cart view="Small"></vc:cart>*@
                        <component type="typeof(Pages.Shared.Components.Blazor.Cart.SmallCartComponentComponent)" render-mode="ServerPrerendered" />
                    </li>
                </ul>
            </div>
        </nav>
        <div>
            <partial name="_CookieConsentPartial" />
        </div>
        <div>
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </section>

