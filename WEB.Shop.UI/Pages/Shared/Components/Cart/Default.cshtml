@model IEnumerable<WEB.Shop.Application.Cart.GetCart.Response>

    <div>
        <p class="title">Koszyk</p>
        @foreach (var product in Model)
        {
            <article class="media">
                <figure class="media-left">
                    <p class="image is-64x64">
                        <img src="https://bulma.io/images/placeholders/128x128.png">
                    </p>
                </figure>
                <div class="media-content">
                    <div class="content">
                        <p class="title">@product.Name</p>
                        <p class="subtitle">Ilość: @product.Quantity</p>
                        <p class="subtitle">Cena: @product.ValueDisplay</p>
                        <p class="subtitle">Całkowita Cena: @product.TotalValueDisplay</p>
                    </div>
                </div>
            </article>
        }
    </div>