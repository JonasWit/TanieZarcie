@code {

    private bool loading;

    protected override async Task OnInitializedAsync()
    {
        if (loading)
        {
            return;
        }
        else
        {
            loading = true;
            await Commander.CheckDataBase();
            loading = false;
        }
    }

    #region Crawlers

    private async Task RunEngine()
    {
        if (loading)
        {
            return;
        }
        else
        {
            loading = true;
            await Commander.RunEngineAsync();
            loading = false;
        }
    }

    private async Task RunEngine(Shops shop)
