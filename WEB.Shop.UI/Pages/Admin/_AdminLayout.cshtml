<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler ml-auto mb-2 bg-light" type="button" data-toggle="collapse" data-target="#myNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myNavbar">
            <div class="container-fluid">
                <div class="row">

                    <!-- Sidebar Start -->
                    <div class="col-xl-2 col-lg-3 col-md-4 tza-sidebar fixed-top">
                        <a href="#" class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 tza-bottom-border">Tanie Zarcie</a>
                        <div class="tza-bottom-border pb-3">
                            <img src="~/images/adminSection/admin.jpeg" width="50" class="rounded-circle mr-3" />
                            <a href="#" class="text-white">Admin User</a>
                        </div>
                        <ul class="navbar-nav flex-column mt-4" id="sidebar-links">
                            <li class="nav-item">
                                <a asp-page="/Admin/Index" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains( "Index") ? "tza-current" : "")">
                                    <i class="fas fa-home text-light fa-lg mr-3"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/CrawlersPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("CrawlersPanel") ? "tza-current" : "")">
                                    <i class="fas fa-bug text-light fa-lg mr-3"></i>Crawlers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/DatabasePanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("DatabasePanel") ? "tza-current" : "")">
                                    <i class="fas fa-database text-light fa-lg mr-3"></i>Database
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/AutomationPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("AutomationPanel") ? "tza-current" : "")">
                                    <i class="fas fa-robot text-light fa-lg mr-3"></i>Automation
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/UsersPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("UsersPanel") ? "tza-current" : "")">
                                    <i class="fas fa-user text-light fa-lg mr-3"></i>Users
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Sidebar End -->

                    <!-- Top Nav Start -->
                    <div class="col-xl-10 col-lg-9 col-md-8 ml-auto bg-dark fixed-top py-2 tza-top-navbar">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h4 class="text-light text-uppercase mb-0">Dashboard</h4>
                            </div>
                            <div class="col-md-5"></div>

                            <!-- Side icons start -->
                            <div class="col-md-3">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-comments text-muted fa-lg tza-nav-icon"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-bell text-muted fa-lg tza-nav-icon"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item ml-md-auto">
                                        <a href="#" class="nav-link" data-toggle="modal" data-target="#sign-out">
                                            <i class="fas fa-sign-out-alt text-danger fa-lg tza-nav-icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- Side icons end -->

                        </div>
                    </div>
                    <!-- Top Nav End -->

                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Modal Start -->
    <div class="modal fade" id="sign-out">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Want to leave?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    Press logout to leave
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Log out</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->

    <section>
        @RenderBody()
    </section>


