@inject IAuthorizationService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>TanieZarcie | ADMIN PANEL</title>
    <base href="~/" />

    <link rel="icon" href="@Url.Content("~/content/browserIcons/computer.png")" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="~/css/adminSite.css" rel="stylesheet" />
</head>

<body>

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler ml-auto mb-2 bg-light" type="button" data-toggle="collapse" data-target="#myNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myNavbar">
            <div class="container-fluid">
                <div class="row">

                    <!-- Sidebar Start -->
                    <div class="col-xl-2 col-lg-3 col-md-4 tza-sidebar fixed-top">
                        <a href="#" class="navbar-brand text-white d-block mx-auto text-center py-3 mb-4 tza-bottom-border">Tanie Zarcie</a>
                        <div class="tza-bottom-border pb-3">
                            <a asp-page="/Admin/UsersPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("UsersPanel") ? "tza-current" : "")">
                                <i class="fas fa-user-cog text-light fa-lg mr-3"></i>@User.Identity.Name
                            </a>
                        </div>
                        <ul class="navbar-nav flex-column mt-4" id="sidebar-links">
                            <li class="nav-item">
                                <a asp-page="/Admin/Index" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains( "Index") ? "tza-current" : "")">
                                    <i class="fas fa-home text-light fa-lg mr-3"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/CrawlersPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("CrawlersPanel") ? "tza-current" : "")">
                                    <i class="fas fa-bug text-light fa-lg mr-3"></i>Crawlers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/AutomationPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("AutomationPanel") ? "tza-current" : "")">
                                    <i class="fas fa-robot text-light fa-lg mr-3"></i>Automation
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Admin/UsersPanel" class="nav-link text-light p-3 mb-2 tza-sidebar-link @(ViewContext.RouteData.Values["page"].ToString().Contains("UsersPanel") ? "tza-current" : "")">
                                    <i class="fas fa-user text-light fa-lg mr-3"></i>Users
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Sidebar End -->

                    <!-- Top Nav Start -->
                    <div class="col-xl-10 col-lg-9 col-md-8 ml-auto bg-dark fixed-top py-2 tza-top-navbar">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h4 class="text-light text-uppercase mb-0">Dashboard</h4>
                            </div>
                            <div class="col-md-5"></div>

                            <!-- Side icons start -->
                            <div class="col-md-3">
                                <ul class="navbar-nav">
                                    <li class="nav-item ml-md-auto">
                                        <a href="#" class="nav-link" data-toggle="modal" data-target="#back-to-main">
                                            <i class="fas fa-sign-out-alt text-warning fa-lg tza-nav-icon"></i>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link" data-toggle="modal" data-target="#sign-out">
                                            <i class="fas fa-sign-out-alt text-danger fa-lg tza-nav-icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- Side icons end -->

                        </div>
                    </div>
                    <!-- Top Nav End -->

                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Modal Start -->
    <div class="modal fade" id="sign-out">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Want to leave?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    Press logout to leave and log out.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Log out</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="back-to-main">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Want to leave?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    Press Back to main to leave admin panel.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Stay Here</button>
                    <a class="btn btn-danger" asp-page="/Index">Back to main</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->

    <section>
        @RenderBody()
    </section>

    <!-- Footer Start -->
    <footer>
        <div class="container-fluid bg-dark">
            <div class="row">
                <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
                    <div class="row border-top pt-3">
                        <div class="col-lg-6 text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item mr-2">
                                    <a href="" class="text-light">Template foooter</a>
                                </li>
                                <li class="list-inline-item mr-2">
                                    <a href="" class="text-light">About</a>
                                </li>
                                <li class="list-inline-item mr-2">
                                    <a href="" class="text-light">Support</a>
                                </li>
                                <li class="list-inline-item mr-2">
                                    <a href="" class="text-light">Something</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6 text-center">
                            <p>&copy; 2020 <i class="fas fa-user-lock text-danger"></i> by <sapn class="text-success">Jonasz</sapn></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer End -->

    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/_framework/blazor.server.js"></script>
    <script src="~/js/admin/adminStyleScripts.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
