@model IEnumerable<WEB.Shop.UI.ViewModels.News.NewsViewModel>

<h1>Newsy</h1>

<div>
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                    @post.Title
                </a>
                -
                <a asp-controller="Manager" asp-action="Edit" asp-route-id="@post.Id">
                    Edit
                </a>
                -
                <a asp-controller="Manager" asp-action="Remove" asp-route-id="@post.Id">
                    Delete
                </a>
            </li>
        }
    </ul>
</div>